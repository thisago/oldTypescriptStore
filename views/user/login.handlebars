<div class="card margin-center mgt-8">
    <h2 class="title text-center pdt-4 mgb-3">Login</h2>
    {{> _genericReturn}}
    {{!-- pd-5 pdl-7 pdr-7 pdt-3 --}}
    <form method="post" class="mg-7 mgt-3 mgb-6">
        <input class="mgb-3" type="text" name="username" placeholder="Username">
        <span class="help help-no-size help-popup-size-3 l-1" data-content="The username or email of account"></span>
        <br>
        <input class="mgb-3" type="password" name="password" placeholder="Password">
        <span class="help help-no-size help-popup-size-3 l-1" data-content="The account password"></span>
        <br>
        <div class="margin-center">
            <label for="remember">Remember-me</label>
            <span class="help help-no-size help-popup-size-3 l-1 help-for-text"
                data-content="The login never will expire. Except if you delete the cookies."></span>
            <br>
            <input class="margin-center eyeopen" type="checkbox" name="remember" id="remember">
        </div>
        <br>
        <button class="margin-center btn-large mgt-3" type="submit">Sign
            in</button>
    </form>
</div>
<div class="margin-center mgt-2">
    Don't have an account?
    <a data-tooltip="Create your own account now!" href="{{HTTPs}}account.{{HOST}}:{{PORT}}/register">Create one
        now!</a>
</div>
